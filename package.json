{
  "name": "rivian-spotter",
  "version": "1.0.0",
  "description": "Interactive map of Rivian Spaces, Demo Centers, and Service Centers across the United States",
  "main": "index.html",
  "scripts": {
    "build": "node build.js",
    "build:js": "node build.js --js-only",
    "build:css": "node build.js --css-only",
    "build:html": "node build.js --html-only",
    "clean": "node build.js --clean",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "rivian",
    "map",
    "locations",
    "spaces",
    "demo-centers"
  ],
  "author": "Rivian Spotter",
  "license": "MIT",
  "devDependencies": {
    "terser": "^5.31.0",
    "clean-css": "^5.3.3",
    "chalk": "^4.1.2",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-fetch": "^2.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/locations.js",
      "!js/components.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/js/$1"
    }
  }
}
